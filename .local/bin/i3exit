#!/bin/sh

THIS=${0##*/}

case "$1" in
    lock)
	i3lock -i ~/.config/i3exit/lock.png
	;;
    logout)
	i3-msg exit
	;;
    suspend)
	i3exit lock && systemctrl suspend
	;;
    hibernate)
	i3exit lock && systemctrl hibernate
	;;
    reboot)
	#systemctrl reboot
	reboot
	;;
    shutdown)
	#systemctrl poweroff
	shutdown now
	;;
    *)
	echo "Usage: $THIS {lock|logout|suspend|hibernate|reboot|shutdown}"
	exit 2
esac

exit 0
	      
