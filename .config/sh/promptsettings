git_color_ahead="$color_yellow"
git_color_behind="$color_yellow"
git_color_staged="$color_cyan"
git_color_dirty="$color_red"
git_color_diverged="$color_red"
git_prefix="$default_prefixÓú• "
git_suffix="$default_suffix"

# Python
python_color="$color_green"
python_prefix="$default_prefixüêç "
python_suffix="$default_suffix"

# Java
