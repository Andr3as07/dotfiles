# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
  interval	 = 1
  colors	 = true
  color_good	 = '#4CAF50'
  color_degraded = '#2B83A6'
  color_bad	 = '#D64937'
}

order += "volume master"
#order += "ipv6"
order += "disk /"
#order += "wireless _first_"
order += "ethernet _first_"
#order += "battery all"
#order += "load"
order += "tztime local"


wireless _first_ {
        format_up = "W: (%quality at %essid)"
        format_down = "W: down"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %speed"
        format_down = "E: down"
}

battery all {
        format = "%status %percentage %remaining"
	last_full_capacity = true
	integer_battery_capacity = true
	low_threshold = 11
	threshold_type = percentage
	hide_seconds = true
	status_chr = "chr"
	status_bat = "bat"
	status_unk = "unk"
	status_full = "full"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

load {
        format = "%1min"
}

disk "/" {
        format = "%avail"
}

volume master {
       format = "vol: %volume"
       format_muted = "Mute"
       device = "default"
       mixer = "Master"
       mixer_idx = 0
}